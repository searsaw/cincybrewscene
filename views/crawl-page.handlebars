<div class="container-fluid">
  <div class="row">
    <div class="header col-xs-12">
        <h2><i class="fa fa-beer" aria-hidden="true"></i> View Crawls <a href="/" class="fa fa-home home"></a></h2>
    </div>


    <section class="col-md-6 col-md-offset-3">
    <div class="row">

        <h2>{{crawl.name}}</h2>

        <div class="votes col-xs-12">
          <p><i data-id="{{crawl._id}}" class="fa fa-thumbs-up"></i></p>
          <p class="pull-right">Votes:<span class="vote">{{reviews.review}}</span></p>
        </div>

        {{#each crawl.breweries}}
            <div class="crawl-brewery col-md-3">  
              <div> 
                <img src="{{this.logo}}">
              </div>
            </div>
        {{/each}}

        <div class="col-xs-12">
        <a href="/map/{{crawl._id}}" class="btn btn-primary">View Map</a>
        </div>

    </div>

    </section>
  </div>
</div>

{{#section 'scripts'}}
<script src="/dist/main.js"></script>
{{/section}}
